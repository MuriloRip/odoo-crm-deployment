<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Adicionar campos na visão de formulário -->
    <record id="crm_lead_view_form_inherit_custom" model="ir.ui.view">
        <name>crm.lead.view.form.inherit.custom</name>
        <model>crm.lead</model>
        <inherit_id ref="crm.crm_lead_view_form"/>
        <arch type="xml">
            <xpath expr="//group[@name='lead_priority']" position="after">
                <group>
                    <field name="custom_priority" widget="priority_selection"/>
                </group>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Notas de Negociação" name="custom_notes_page">
                    <field name="custom_notes" placeholder="Ex: esse cliente tem um fusca para quitar ou o filho dele ia casar..."/>
                </page>
            </xpath>
            <xpath expr="//field[@name='phone']" position="after">
                <div class="o_row" invisible="not whatsapp_url">
                    <field name="whatsapp_url" invisible="1"/>
                    <a t-att-href="record.whatsapp_url.value" target="_blank" class="btn btn-secondary btn-sm">
                        <i class="fa fa-whatsapp" style="color: green;"/> WhatsApp
                    </a>
                </div>
            </xpath>
        </arch>
    </record>

    <!-- Adicionar botão de WhatsApp na visão Kanban -->
    <record id="crm_case_kanban_view_leads_inherit_custom" model="ir.ui.view">
        <name>crm.lead.kanban.view.inherit.custom</name>
        <model>crm.lead</model>
        <inherit_id ref="crm.crm_case_kanban_view_leads"/>
        <arch type="xml">
            <xpath expr="//div[hasclass('oe_kanban_footer')]" position="before">
                <div class="o_kanban_record_bottom" t-if="record.whatsapp_url.raw_value">
                    <div class="oe_kanban_bottom_left">
                        <a t-att-href="record.whatsapp_url.raw_value" target="_blank" class="btn btn-link btn-sm p-0">
                            <i class="fa fa-whatsapp" style="color: green; font-size: 1.2em;"/>
                        </a>
                    </div>
                </div>
            </xpath>
        </arch>
    </record>
</odoo>
