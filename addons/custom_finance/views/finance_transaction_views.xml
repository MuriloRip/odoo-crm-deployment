<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Visão de Lista (Tree) -->
    <record id="view_finance_transaction_tree" model="ir.ui.view">
        <name>finance.transaction.tree</name>
        <model>finance.transaction</model>
        <arch type="xml">
            <tree decoration-danger="transaction_type == 'expense'" decoration-success="transaction_type == 'income'">
                <field name="date"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="transaction_type"/>
                <field name="amount" sum="Total"/>
                <field name="status" widget="badge" decoration-info="status == 'pending'" decoration-success="status == 'paid'"/>
            </tree>
        </arch>
    </record>

    <!-- Visão de Formulário -->
    <record id="view_finance_transaction_form" model="ir.ui.view">
        <name>finance.transaction.form</name>
        <model>finance.transaction</model>
        <arch type="xml">
            <form>
                <header>
                    <field name="status" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="amount"/>
                        </group>
                        <group>
                            <field name="transaction_type" widget="radio"/>
                            <field name="date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Observações">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </arch>
    </record>

    <!-- Ação de Janela -->
    <record id="action_finance_transaction" model="ir.actions.act_window">
        <name>Controle Financeiro</name>
        <res_model>finance.transaction</res_model>
        <view_mode>tree,form</view_mode>
        <help type="html">
            <p class="o_view_nocontent_smiling_face">
                Registre sua primeira transação financeira!
            </p>
        </help>
    </record>

    <!-- Menus -->
    <menuitem id="menu_finance_root" name="Financeiro" sequence="10" web_icon="base.static/description/settings.png"/>
    <menuitem id="menu_finance_transactions" name="Transações" parent="menu_finance_root" action="action_finance_transaction" sequence="1"/>
</odoo>
